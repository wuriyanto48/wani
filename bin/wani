#!/usr/bin/env node

const index = require('../index');

const VERSION = '1.0.0';

const [ bin, sourcePath, ...args ] = process.argv;

const main = () => {
	const help = `
		
                _______  _       _________
        |\     /|(  ___  )( (    /|\__   __/
        | )   ( || (   ) ||  \  ( |   ) (   
        | | _ | || (___) ||   \ | |   | |   
        | |( )| ||  ___  || (\ \) |   | |   
        | || || || (   ) || | \   |   | |   
        | () () || )   ( || )  \  |___) (___
        (_______)|/     \||/    )_)\_______/
                                    

		
            Usage:
            wani http://mystorage.com/myfile.zip
            -h -help | show help
            -version | show version
	`;
	
	if (args.length <= 0) {
		console.log(help);
		process.exit(0);
	}

	if (args[0] === '-h' || args[0] === '-help') {
		console.log(help);
		process.exit(0);
	}

	if (args[0] === '-version') {
		console.log(index.setColor(`wani version ${VERSION}`, 'red'));
		process.exit(0);
	}
		
};

main();